{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es5", "es6", "esnext.asynciterable", "es2017"],
    "types": ["node"],
    "typeRoots": ["./src/types", "node_modules"],
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "rootDirs": ["."],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "__generated__/*": ["src/__generated__/*"],
    }
  },
  "exclude": ["node_modules", "src/__generated__/"],
  "include": ["src/**/*"]
}
