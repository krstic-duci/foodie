{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext.asynciterable", "es2017", "es2018"],
    "types": ["node"],
    "typeRoots": ["./src/types", "node_modules"],
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "rootDirs": ["."],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "__generated__/*": ["__generated__/*"],
      "@models/*": ["db/models/*"],
      "@resolvers/*": ["resolvers/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules", "src/__generated__/"],
  "include": ["src/**/*"]
}
